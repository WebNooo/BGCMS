<article class="short-story">
  <div class="short-left">
    <h2>[title]{title}[/title]</h2>
    <div style="padding-top: 10px; padding-bottom: 10px; padding-left: 5px;">{short}</div>
  </div>
  <div class="short-panel">
    <ul class="news-info">
      <li><i class="fa fa-user"></i>Автор: {author}</li>
      <li><i class="fa fa-comment"></i>Комментарии: {comments-num}</li>
      <li><i class="fa fa-eye"></i>Просмотры: {views}</li>
      <li><i class="fa fa-list"></i>{category}</li>
      <li><i class="fa fa-times"></i><a href="{date_link}">{date}</a></li>
    </ul>
    <div class="right-panel">
      <a href="{full_link}" rel="nofollow"><span class="go-read">Читать далее <i class="fa fa-arrow-circle-o-right"></i></span></a>
    </div>
  </div>
</article>