<div class="short-story comment-post">
    <header>
        <ul>
            <li>Написал: [profile]{author}[/profile]</li>
            <li>[declination={comm-num}]комментари|й|я|ев[/declination]: {comm-num}</li>
            <li>[declination={posts-num}]публикаци|я|и|й[/declination]: {posts-num}</li>
            <li class="one-right">{date}</li>
        </ul>
    </header>
    <img src="{photo}" class="noava-comment">
    <div class="comm-text">{comment}</div>
    <div class="selectmass">{mass-action}</div>
    [reply]<span class="comm-reply">Ответить<i class="fa fa-reply"></i></span>[/reply]
    [com-edit]<span class="comm-reply">Изменить<i class="fa fa-edit"></i></span>[/com-edit]
    [com-del]<span class="comm-reply">Удалить<i class="fa fa-trash-o"></i></span>[/com-del]

</div>